#:import utils kivy.utils
#:import Color kivy.utils.get_color_from_hex 


<GridLayout>:
	cols: 2
	spacing: 10
	row_default_height: 0.5 * (self.width - self.spacing[0]) - self.padding[0]
	row_force_default: True

<main>:
	AnchorLayout:
		#height: 100
		Label:
			anchor_x: 'left'
			anchor_y:  'top'
			text: '[b]FCS[/b]\n[color=#ff0099]VAL[/color]'
			markup: True
			font_size: '12pt'
			#width: 20
			size_hint: 0.05,0.05
		Label:
			anchor_x: 'right'
			anchor_y: 'top'
			text: '[b]Teensy Flight Computer[/b]'
			markup: True
			font_size: '20pt'
			size_hint: 0.05,0.05
 	#name: 'main'
	GridLayout:
		Button:
			text: 'Control Panel'
			background_color: Color('#3498DB')
			on_press: app.stop()
			#size_hint: 0.2,0.1

		GridLayout:
			Button:
				text: 'Graph 1'
				background_color: Color('#1ABC9C')
				on_press: root.open_graph()
				#size_hint: 0.2,0.1
			Button:
				text: 'Graph 2'
				background_color: Color('#2ECC71')
				on_press: app.stop()
				#size_hint: 0.2,0.1
			Button:
				text: 'Graph 3'
				background_color: Color('#27AE60')
				on_press: app.stop()
				#size_hint: 0.2,0.1

			Button:
				text: 'Graph 4'
				background_color: Color('#16A085')
				on_press: app.stop()
				#size_hint: 0.2,0.1

		Button:
			text: 'Logger'
			background_color: Color('#E74C3C')
			on_press: app.stop()
			#size_hint: 0.2,0.1
		Button:
			text: 'Disconnect'
			background_color: Color('#95A5A6')
			on_press: app.stop()
			#size_hint: 0.2,0.1