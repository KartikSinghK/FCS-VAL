#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Window kivy.core.window.Window

<launcher>:
  name: 'launcher'
  #some_property: setattr(Window,'borderless',True)
  transition: FadeTransition()
  BoxLayout:
    # other UI controls -- not shown
    Label:
      text:
        ('[b]Flight[/b] [color=ff0099]Control System[/color]\n'
        '[color=ff0099]Real-Time[/color] [b]Telemetry[/b]')

      markup: True
      font_size: '46pt'
 
  Button:
    text: 'Connect'
    size_hint: 0.2, 0.1
    pos_hint: {"x":.4, "top":.2}
    on_press: 
      root.open_launcher_with_device()
      app.stop()

